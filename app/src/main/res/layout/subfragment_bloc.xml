<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bloc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.blocorganization.blocapp.bloc.BlocSubFragment">

    <ScrollView
        android:id="@+id/bloc_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bloc_frag_main_logo"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                app:srcCompat="@drawable/bloc_logo_original_negative2" />

            <TextView
                android:id="@+id/bloc_frag_strongmoves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bloc_frag_strongmoves"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bloc_checkus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="125dp"
                android:text="@string/bloc_check_us_out"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/header_brotherhood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="#A6A6A6"
                android:gravity="center"
                android:paddingTop="75dp"
                android:text="@string/header_brohood_text"
                android:textColor="#000000"
                android:textSize="@dimen/headers_size" />

            <TextView
                android:id="@+id/text_worldcampus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#A6A6A6"
                android:gravity="center"
                android:paddingBottom="75dp"
                android:paddingTop="10dp"
                android:text="@string/worldcampus_text"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/header_5corg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="75dp"
                android:gravity="center"
                android:text="@string/header_5corg_text"
                android:textSize="@dimen/headers_size" />

            <ImageView
                android:id="@+id/bloc_members1516"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:contentDescription="@string/bloc_members1516_desc"
                app:srcCompat="@drawable/bloc_member1516" />

            <TextView
                android:id="@+id/header_whoarewe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:background="@color/textColor"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="75dp"
                android:text="@string/header_whoarewe_text"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/headers_size" />

            <TextView
                android:id="@+id/text_whoarewe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/textColor"
                android:paddingBottom="75dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/whoarewe_text"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/menu_marginbottom">

        <ImageView
            android:id="@+id/bloc_chevron_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/chevron"
            app:srcCompat="@drawable/chevron_down"
            android:translationZ="10dp"/>

        <LinearLayout
            android:id="@+id/menu_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_bullet1"
                android:layout_width="@dimen/menu_bullet_side"
                android:layout_height="@dimen/menu_bullet_side"
                android:layout_margin="@dimen/bloc_menu_bullet_margin"
                android:contentDescription="@string/menu_bullet"
                app:srcCompat="@drawable/menu_point" />

            <ImageView
                android:id="@+id/menu_bullet2"
                android:layout_width="@dimen/menu_bullet_side"
                android:layout_height="@dimen/menu_bullet_side"
                android:layout_margin="@dimen/bloc_menu_bullet_margin"
                android:contentDescription="@string/menu_bullet"
                app:srcCompat="@drawable/menu_point" />

            <!--<ImageView-->
            <!--android:id="@+id/menu_selected_bullet"-->
            <!--android:layout_width="@dimen/menu_selected_bullet_side"-->
            <!--android:layout_height="@dimen/menu_selected_bullet_side"-->
            <!--android:layout_margin="@dimen/bloc_menu_bullet_margin"-->
            <!--android:contentDescription="@string/menu_bullet"-->
            <!--app:srcCompat="@drawable/menu_selected_point" />-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="@dimen/menu_selected_bullet_side"
                android:layout_marginRight="@dimen/menu_selected_bullet_side">

                <TextView
                    android:id="@+id/menu_selected_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="bloc"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/menu_bullet4"
                android:layout_width="@dimen/menu_bullet_side"
                android:layout_height="@dimen/menu_bullet_side"
                android:layout_margin="@dimen/bloc_menu_bullet_margin"
                android:contentDescription="@string/menu_bullet"
                app:srcCompat="@drawable/menu_point" />

            <ImageView
                android:id="@+id/menu_bullet5"
                android:layout_width="@dimen/menu_bullet_side"
                android:layout_height="@dimen/menu_bullet_side"
                android:layout_margin="@dimen/bloc_menu_bullet_margin"
                android:contentDescription="@string/menu_bullet"
                app:srcCompat="@drawable/menu_point" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
