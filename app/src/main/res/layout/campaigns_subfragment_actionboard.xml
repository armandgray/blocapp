<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.blocorganization.blocapp.campaigns.ActionboardSubFragment">

    <include layout="@layout/actionboard_meeting_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightGray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCertIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/icon"
            android:padding="2.5dp"
            app:srcCompat="@drawable/ic_seal_white_48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="You have completed 4 tasks"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white_dividers_background"
        android:orientation="horizontal"
        android:paddingBottom="0.2dp"
        android:paddingTop="0.2dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".35">

            <ImageView
                android:id="@+id/ivCampaignImage1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/campaigns_image_desc"
                android:scaleType="centerCrop"
                android:tint="#1A000000" />

            <ImageView
                android:id="@+id/ivCompletionIcon1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/actionbar_notifications_image_background"
                android:contentDescription="@string/icon"
                android:tint="@color/ToolBarColor"
                app:srcCompat="@drawable/ic_star_white_48dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".35">

            <ImageView
                android:id="@+id/ivCampaignImage2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/campaigns_image_desc"
                android:scaleType="centerCrop"
                android:tint="#1A000000" />

            <ImageView
                android:id="@+id/ivCompletionIcon2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/actionbar_notifications_image_background"
                android:contentDescription="@string/icon"
                android:tint="@color/ToolBarColor"
                app:srcCompat="@drawable/ic_star_half_white_48dp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivCampaignImage3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/campaigns_image_desc"
                    android:scaleType="centerCrop"
                    android:tint="#1A000000" />

                <ImageView
                    android:id="@+id/ivCompletionIcon3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/actionbar_notifications_image_background"
                    android:contentDescription="@string/icon"
                    android:tint="@color/ToolBarColor"
                    app:srcCompat="@drawable/ic_star_outline_white_48dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivCampaignImage4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/campaigns_image_desc"
                    android:scaleType="centerCrop"
                    android:tint="#1A000000" />

                <ImageView
                    android:id="@+id/ivCompletionIcon4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/icon"
                    android:tint="@color/ToolBarColor"
                    app:srcCompat="@drawable/ic_star_outline_white_48dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/lightGray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListItem" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListItem" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListItem" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListItem" />
    </LinearLayout>

</LinearLayout>