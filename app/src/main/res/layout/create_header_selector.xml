<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCampaignImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/create_dialog_circle"
            android:contentDescription="@string/create_dialog_icon"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:tint="@color/ToolBarColor"
            app:srcCompat="@drawable/ic_message_bulleted_white_48dp" />
    </LinearLayout>

</FrameLayout>