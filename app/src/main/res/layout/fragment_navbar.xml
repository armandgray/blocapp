<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/navbar_padding"
    android:background="@drawable/navbar_border"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/bullhorn"
        android:layout_width="@dimen/navbar_icon_size"
        android:layout_height="@dimen/navbar_icon_size"
        android:layout_marginLeft="@dimen/navbar_margins"
        android:layout_marginRight="@dimen/navbar_margins"
        app:srcCompat="@drawable/bullhorn"
        android:onClick="onBullhornClick"/>

    <ImageView
        android:id="@+id/calendar"
        android:layout_width="@dimen/navbar_icon_size"
        android:layout_height="@dimen/navbar_icon_size"
        android:layout_marginLeft="@dimen/navbar_margins"
        android:layout_marginRight="@dimen/navbar_margins"
        app:srcCompat="@drawable/calendar_multiple" />

    <ImageView
        android:id="@+id/emoticon"
        android:layout_width="@dimen/navbar_icon_size"
        android:layout_height="@dimen/navbar_icon_size"
        android:layout_marginLeft="@dimen/navbar_margins"
        android:layout_marginRight="@dimen/navbar_margins"
        app:srcCompat="@drawable/emoticon_cool" />

    <ImageView
        android:id="@+id/personal"
        android:layout_width="@dimen/navbar_icon_size"
        android:layout_height="@dimen/navbar_icon_size"
        android:layout_marginLeft="@dimen/navbar_margins"
        android:layout_marginRight="@dimen/navbar_margins"
        app:srcCompat="@drawable/odnoklassniki" />

    <ImageView
        android:id="@+id/boldB"
        android:layout_width="@dimen/navbar_icon_size"
        android:layout_height="@dimen/navbar_icon_size"
        android:layout_marginLeft="@dimen/navbar_margins"
        android:layout_marginRight="@dimen/navbar_margins"
        app:srcCompat="@drawable/format_bold" />
</LinearLayout>
