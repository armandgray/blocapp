<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- lower rectangle (border color) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blocRolesBorderColor" />

            <!-- The radius makes the corners rounded -->
            <corners
                android:radius="@dimen/bloc_roles_corners"   >
            </corners>
        </shape>
    </item>

    <!-- upper rectangle (background color) -->
    <item android:top="@dimen/roles_underline_size">
        <shape android:shape="rectangle">
            <solid android:color="@color/blocRolesColor" />

            <!-- The radius makes the corners rounded -->
            <corners
                android:radius="@dimen/bloc_roles_corners"   >
            </corners>
        </shape>
    </item>
</layer-list>